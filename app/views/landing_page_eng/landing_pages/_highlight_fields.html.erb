<fieldset>
	<legend>Highlight:</legend>
	<div class="field">
		<%= f.label :title %><br />
		<%= f.text_area :title, rows: 2 %>
	</div>
	<div class="field">
		<%= f.label :body %><br />
		<%= f.text_area :body, rows: 6 %>
	</div>
	<div class="field">
		<%= f.label :icon_image %><br />
		<%= f.file_field :icon_image %>
	</div>

	<%= f.hidden_field :_destroy %>
	<%= link_to "remove", "#", class: "remove_fields" %>
</fieldset>

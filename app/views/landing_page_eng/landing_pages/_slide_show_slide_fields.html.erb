<fieldset>
	<legend>Slide Show Slide:</legend>
	<div class="field">
		<%= f.label :title %><br />
		<%= f.text_area :title, rows: 2 %>
	</div>
	<div class="field">
		<%= f.label :tagline %><br />
		<%= f.text_area :tagline, rows: 4 %>
	</div>
	<div class="field">
		<%= f.label :body %><br />
		<%= f.text_area :body, rows: 6 %>
	</div>
	<div class="field">
		<%= f.label :call_to_action_url %><br />
		<%= f.text_field :call_to_action_url %>
	</div>
	<div class="field">
		<%= f.label :image %><br />
		<%= f.file_field :image %>
	</div>

	<%= f.hidden_field :_destroy %>
	<%= link_to "remove", "#", class: "remove_fields" %>
</fieldset>
